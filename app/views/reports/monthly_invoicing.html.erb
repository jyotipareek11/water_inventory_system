<% content_for :title, "Report" %>
<% content_for :sub_title do %>
  <li><a href="/">Home</a> <span class="divider">/</span></li>
  <li class="active">Invoice Reports</li>
<%end%>
<div class="row-fluid">
	<div class="reporting-div">
<h4>Please selct Start Date and End Date for Invoice report</h4>
<br/>
<%= form_tag("/reports/invoice_report", method: "post", class: 'form-horizontal' )  do%>
	<div class="control-group">
		<%= label_tag 'invoice_start_date',nil,class: 'control-label'%>
		<div class="controls">
			<%= text_field_tag 'invoice_start_date',nil, class: 'txtFromDate'  %>
		</div>	
	</div>	
	<div class="control-group">
		<%= label_tag 'invoice_end_date', nil, class: 'control-label'%>
		<div class="controls">
			<%= text_field_tag 'invoice_end_date',nil , class: 'txtToDate' %>
		</div>
	</div>	
	<div class="form-actions">	
  		<%= submit_tag("Generate") %>
  	</div>	
  
<%end%>	
</div>
</div>

