<%- model_class = User -%>
<div class="page-header">
  <h1>Distributor</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @distributor.email %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:last_sign_in_at) %>:</strong></dt>
  <dd><%= @distributor.last_sign_in_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @distributor.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @distributor.last_name ? @distributor.last_name : "NO"%></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @distributor.phone_number ? @distributor.phone_number : ""%></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile_number) %>:</strong></dt>
  <dd><%= @distributor.mobile_number ? @distributor.mobile_number : "" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line1) %>:</strong></dt>
  <dd><%= @distributor.address_line1 ? @distributor.address_line1 : "" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line2) %>:</strong></dt>
  <dd><%= @distributor.address_line2 ? @distributor.address_line2 : ""%></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @distributor.city ? @distributor.city : "" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @distributor.state ? @distributor.state : "" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @distributor.country ? @distributor.country : "" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @distributor.role ? @distributor.role : "" %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              location_distributors_path(@location), :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              location_distributor_path(@location,@distributor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
