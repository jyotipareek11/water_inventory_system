<% content_for :title, "Distributor" %>
<% content_for :sub_title do %>
  <li><a href="/">Home</a> <span class="divider">/</span></li>
  <li class="active">Distributors of <%= location.name%></li>
<%end%>

<div class="row-fluid">
  <%- model_class = User -%>


<div class="btn-toolbar">
  <%#= link_to "Add New Distributor for "+ location.name, new_location_distributor_path(location),:class => 'btn btn-primary' %>

    <a href= "/locations/<%= location.id%>/distributors/new">
      <button class="btn btn-primary"><i class="icon-plus"></i> Add New Distributor for <%= location.name %>
     </button>
   </a>
    <div class="btn-group"></div>
</div>

<%#= link_to "Back", locations_path,:class => 'btn btn-primary' %>
<div class="well">
<% if @distributors.count > 0%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th>Full Name</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% distributors.each do |user| %>
      <tr>
        <td><%= user.email%></td>
        <td><%= user.full_name%></td>
        <td><%=long_date_format(local_time_zone(user.created_at))%></td>
        <td>
          <%= link_to "Show",
                        location_distributor_path(location,user), :class => 'btn btn-mini btn-danger' %>
           <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              location_distributor_path(location,user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "Are you Sure you want to remove this Distributor? All clients related tod this Distributor will get remove.")) },
              :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
  <h4>No Any Distributors</h4>
  
<%end%>
</div>
</div>  

