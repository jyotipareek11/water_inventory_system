<%- model_class = PurchaseOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vendor_id) %>:</strong></dt>
  <dd><%= @purchase_order.vendor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:no_of_unit) %>:</strong></dt>
  <dd><%= @purchase_order.no_of_unit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_price) %>:</strong></dt>
  <dd><%= @purchase_order.unit_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_price) %>:</strong></dt>
  <dd><%= @purchase_order.total_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount) %>:</strong></dt>
  <dd><%= @purchase_order.discount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price_after_discount) %>:</strong></dt>
  <dd><%= @purchase_order.price_after_discount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:added_by) %>:</strong></dt>
  <dd><%= @created_user.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:modified_by) %>:</strong></dt>
  <dd><%= @purchase_order.modified_by %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              vendor_purchase_orders_path(@vendor), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vendor_purchase_order_path(@vendor,@purchase_order), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vendor_purchase_order_path(@vendor,@purchase_order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
