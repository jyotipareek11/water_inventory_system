<%- model_class = Purchase -%>
<%- count = 0%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% if @purchases.count > 0%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:count) %></th>
      <th><%= model_class.human_attribute_name(:no_of_unit) %></th>
      <th><%= model_class.human_attribute_name(:unit_price) %></th>
      <th><%= model_class.human_attribute_name(:total_price) %></th>
      <th><%= model_class.human_attribute_name(:discount) %></th>
      <th><%= model_class.human_attribute_name(:price_after_discount) %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:vendor_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <%- count = count + 1%>
        <td><%= link_to count, vendor_purchase_path(@vendor,purchase)%></td>
        <td><%= purchase.no_of_unit %></td>
        <td><%= purchase.unit_price %></td>
        <td><%= purchase.total_price %></td>
        <td><%= purchase.discount %></td>
        <td><%= purchase.price_after_discount %></td>
        <td><%= purchase.product.name %></td>
        <td><%= purchase.vendor.name %></td>
        <td><%= purchase.created_at.strftime('%a %b %d, %I:%M %p ') %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vendor_purchase_path(@vendor,purchase), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vendor_purchase_path(@vendor,purchase),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<h4>No Any Purchase made.</h4>
<%end%>
<%= link_to "Create New Purchase",
            new_vendor_purchase_path(@vendor),
            :class => 'btn btn-primary' %>
